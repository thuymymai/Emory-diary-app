<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="388dp"
        android:layout_height="71dp"
        android:layout_marginTop="92dp"
        android:background="@color/highlight"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/choose_time"
        android:textColor="@color/icon"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="309dp"
        android:layout_height="367dp"
        android:background="@color/white"
        android:headerBackground="@color/secondary"
        android:numbersInnerTextColor="@color/black"
        android:numbersSelectorColor="@color/calendarText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.249" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/doneChooseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:tint="@color/white"
        app:backgroundTint="@color/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"
        app:srcCompat="@drawable/baseline_done_black_18dp" />

</androidx.constraintlayout.widget.ConstraintLayout>